{
  "name": "adb-wifi-qr",
  "version": "0.1.3",
  "description": "Connect Android device over ADB Wi-Fi using IP, auto-discovery",
  "license": "ISC",
  "author": "Ganesh Panwar",
  "publisher": "Ganesh-Panwar",
  "displayName": "ADB WiFi Connect",
  "icon": "assets/logo.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "type": "commonjs",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/GaneshPanwar/adb_wifi_qr.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^14.18.63",
    "@vscode/test-electron": "^2.5.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typescript": "^4.0.0",
    "vscode": "^1.1.34"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:adbWifi.connectAutoWifi",
    "onCommand:adbWifi.connectWifi",
    "onCommand:adbWifi.connectQr",
    "onCommand:adbWifi.listDevices",
    "onCommand:adbWifi.tcpip",
    "onCommand:adbWifi.disconnect",
    "onCommand:adbWifi.connectPairing",
    "onCommand:adbWifi.connectFromList"
  ],
  "contributes": {
    "commands": [
      {
        "command": "adbWifi.connectAutoWifi",
        "title": "ADB: Connect Auto Wi-Fi",
        "icon": {
          "light": "$(refresh)",
          "dark": "$(refresh)"
        }
      },
      {
        "command": "adbWifi.connectPairing",
        "title": "ADB: Connect with Pairing Code",
        "icon": {
          "light": "$(code)",
          "dark": "$(code)"
        }
      },
      {
        "command": "adbWifi.connectWifi",
        "title": "ADB: Connect via Wi-Fi (IP)",
        "icon": {
          "light": "$(plug)",
          "dark": "$(plug)"
        }
      },
      {
        "command": "adbWifi.listDevices",
        "title": "ADB: List Devices",
        "icon": {
          "light": "$(device-mobile)",
          "dark": "$(device-mobile)"
        }
      },
      {
        "command": "adbWifi.disconnect",
        "title": "ADB: Disconnect Device",
        "icon": {
          "light": "$(debug-disconnect)",
          "dark": "$(debug-disconnect)"
        }
      },
      {
        "command": "adbWifi.tcpip",
        "title": "ADB: Enable TCP/IP on Device",
        "icon": {
          "light": "$(broadcast)",
          "dark": "$(broadcast)"
        }
      },
      {
        "command": "adbWifi.connectFromList",
        "title": "ADB: Connect to Device from List",
        "icon": {
          "light": "$(broadcast)",
          "dark": "$(broadcast)"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ADB WiFi Settings",
      "properties": {
        "adbWifi.adbPath": {
          "type": "string",
          "default": "",
          "description": "Full path to adb executable (optional). If empty, extension will attempt to find adb in common SDK locations or use system PATH."
        }
      }
    }
  }
}
